<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage
    x:Class="ShoppingApp.Views.Principal.MasterPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ShoppingApp.Controls"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:principal="clr-namespace:ShoppingApp.Views.Principal"
    xmlns:sharedtransitions="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
    Title="Master"
    mc:Ignorable="d">
    <MasterDetailPage.Master>
        <principal:MenuPage />
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <sharedtransitions:SharedTransitionNavigationPage
         
            x:Name="NavigationMaster"
            BarBackgroundColor="White"
            BarTextColor="Black">
            <x:Arguments>
                <principal:HomePage />
            </x:Arguments>
        </sharedtransitions:SharedTransitionNavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>